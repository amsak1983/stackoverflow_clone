{
  "name": "stackoverflow_clone",
  "private": true,
  "dependencies": {
    "flowbite": "^3.1.2",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "@tailwindcss/typography": "^0.5.10"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./app/assets/stylesheets/tailwind.css -o ./app/assets/builds/application.css --minify",
    "build:css:dev": "tailwindcss -i ./app/assets/stylesheets/tailwind.css -o ./app/assets/builds/application.css --watch",
    "build": "yarn build:css"
  }
}
