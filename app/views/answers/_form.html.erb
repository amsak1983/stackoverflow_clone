<% if answer.persisted? %>
  <%= form_with model: answer, local: false, class: "mt-4" do |form| %>
    <% if answer.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h3 class="font-bold mb-2">Please fix the following errors:</h3>
        <ul class="list-disc pl-5">
          <% answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :body, "Edit your answer", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= form.text_area :body, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>

    <div class="flex space-x-2">
      <%= form.submit "Update Answer", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= link_to "Cancel", "#", class: "px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400", 
          data: { turbo_frame: "_top" } %>
    </div>
  <% end %>
<% else %>
  <%= form_with model: [ @question, answer ], local: false, id: "new_answer", class: "mt-6" do |form| %>
    <% if answer.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <h3 class="font-bold mb-2">Please fix the following errors:</h3>
        <ul class="list-disc pl-5">
          <% answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :body, "Your Answer", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= form.text_area :body, rows: 4, placeholder: "Write your answer here...", 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>

    <%= form.submit "Post Answer", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  <% end %>
<% end %>
