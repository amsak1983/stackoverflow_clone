<% content_for :title, "My Rewards" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">My Rewards</h1>
    <p class="text-gray-600 dark:text-gray-400">View all rewards you've received and created</p>
  </div>

  <!-- Received Rewards Section -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 flex items-center">
      <svg class="w-6 h-6 mr-2 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
      Received Rewards (<%= @received_rewards.count %>)
    </h2>
    
    <% if @received_rewards.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @received_rewards.each do |reward| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
            <% if reward.image.attached? %>
              <div class="mb-4">
                <%= image_tag reward.image, 
                    class: "w-full h-32 object-cover rounded-lg",
                    alt: "Reward image for #{reward.title}" %>
              </div>
            <% end %>
            
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
              <%= reward.title %>
            </h3>
            
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-3">
              <p class="mb-1">
                <span class="font-medium">Question:</span>
                <%= link_to reward.question.title, 
                    question_path(reward.question),
                    class: "text-blue-600 dark:text-blue-400 hover:underline" %>
              </p>
              <p class="mb-1">
                <span class="font-medium">Created by:</span>
                <%= reward.user.email %>
              </p>
              <p>
                <span class="font-medium">Received:</span>
                <%= reward.updated_at.strftime("%B %d, %Y") %>
              </p>
            </div>
            
            <div class="flex items-center justify-between">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Awarded
              </span>
              
              <%= link_to "View Question", 
                  question_path(reward.question),
                  class: "text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No rewards received yet</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          Answer questions to earn rewards when your answer is selected as the best!
        </p>
      </div>
    <% end %>
  </div>

  <!-- Created Rewards Section -->
  <div>
    <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6 flex items-center">
      <svg class="w-6 h-6 mr-2 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
      </svg>
      Created Rewards (<%= @created_rewards.count %>)
    </h2>
    
    <% if @created_rewards.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @created_rewards.each do |reward| %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700">
            <% if reward.image.attached? %>
              <div class="mb-4">
                <%= image_tag reward.image, 
                    class: "w-full h-32 object-cover rounded-lg",
                    alt: "Reward image for #{reward.title}" %>
              </div>
            <% end %>
            
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
              <%= reward.title %>
            </h3>
            
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-3">
              <p class="mb-1">
                <span class="font-medium">Question:</span>
                <%= link_to reward.question.title, 
                    question_path(reward.question),
                    class: "text-blue-600 dark:text-blue-400 hover:underline" %>
              </p>
              <p class="mb-1">
                <span class="font-medium">Created:</span>
                <%= reward.created_at.strftime("%B %d, %Y") %>
              </p>
              <% if reward.awarded? %>
                <p>
                  <span class="font-medium">Awarded to:</span>
                  <%= reward.recipient.email %>
                </p>
              <% end %>
            </div>
            
            <div class="flex items-center justify-between">
              <% if reward.awarded? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Awarded
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  Pending
                </span>
              <% end %>
              
              <%= link_to "View Question", 
                  question_path(reward.question),
                  class: "text-blue-600 dark:text-blue-400 hover:underline text-sm font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No rewards created yet</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          Create a question with a reward to motivate the community to provide great answers!
        </p>
        <div class="mt-6">
          <%= link_to "Ask a Question", 
              new_question_path,
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
