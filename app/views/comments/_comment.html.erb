<div id="<%= dom_id(comment) %>" class="p-3 bg-gray-50 dark:bg-gray-800/60 border border-gray-200 dark:border-gray-700 rounded-lg flex justify-between items-start">
  <div>
    <p class="text-sm text-gray-900 dark:text-gray-100 whitespace-pre-line"><%= comment.body %></p>
    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
      by <%= comment.user.email %> â€¢ <%= time_ago_in_words(comment.created_at) %> ago
    </p>
  </div>
  <% if local_assigns[:show_controls] %>
    <%= link_to "Delete", comment_path(comment), method: :delete,
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" },
          class: "text-xs text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300" %>
  <% end %>
</div>
