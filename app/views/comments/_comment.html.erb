<div id="comment_<%= comment.id %>" class="bg-gray-50 dark:bg-gray-800 p-3 rounded-lg mb-2">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <p class="text-sm text-gray-700 dark:text-gray-300 mb-1">
        <%= simple_format(comment.body) %>
      </p>
      <div class="text-xs text-gray-500 dark:text-gray-400">
        by <strong><%= comment.user.name %></strong> â€¢ 
        <%= time_ago_in_words(comment.created_at) %> ago
      </div>
    </div>
    
    <% if user_signed_in? && (current_user == comment.user || current_user.author_of?(comment.commentable)) %>
      <div class="ml-2">
        <%= link_to "Delete", 
            comment_path(comment), 
            method: :delete,
            data: { 
              turbo_method: :delete,
              confirm: "Are you sure?" 
            },
            class: "text-red-600 hover:text-red-800 text-xs" %>
      </div>
    <% end %>
  </div>
</div>
