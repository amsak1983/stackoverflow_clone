<div class="nested-fields bg-gray-50 p-4 mb-3 rounded-lg border border-gray-200">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :name, "Link Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
    
    <div>
      <%= f.label :url, "URL", class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  </div>
  
  <div class="mt-2">
    <%= link_to_remove_association "Remove Link", f, 
        class: "text-red-600 hover:text-red-800 text-sm font-medium" %>
  </div>
</div>
