<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Question Section -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-4"><%= @question.title %></h1>
    
    <div class="prose dark:prose-invert max-w-none mb-4">
      <%= simple_format(@question.body) %>
    </div>
    
    <div class="text-sm text-gray-500 dark:text-gray-400">
      Asked <%= time_ago_in_words(@question.created_at) %> ago
      <% if @question.user %>
        by <span class="font-medium text-gray-700 dark:text-gray-300"><%= @question.user.email %></span>
      <% end %>
    </div>
  </div>

  <!-- Answers Section -->
  <%= render 'answers_list', answers: @question.answers.sorted_by_best %>

  <!-- Answer Form Section -->
  <% if user_signed_in? %>
    <div class="mt-8">
      <%= render 'answer_form', question: @question, answer: @answer || Answer.new %>
    </div>
  <% else %>
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mt-8">
      <p class="text-blue-800 dark:text-blue-200">
        <%= link_to "Sign in", new_user_session_path, class: "font-medium underline" %> or 
        <%= link_to "sign up", new_user_registration_path, class: "font-medium underline" %> to post an answer.
      </p>
    </div>
  <% end %>

  <!-- Navigation -->
  <div class="mt-8">
    <%= link_to "← Back to Questions", questions_path, 
                class: "inline-flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
  </div>
</div>
