<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @question.title %></h1>
  <% if user_signed_in? && @question.user == current_user %>
    <%= button_to question_path(@question), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800' do %>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
        Delete Question
      </div>
    <% end %>
  <% end %>
</div>

<div class="p-6 bg-gray-50 border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 mb-6">
  <div class="whitespace-pre-wrap text-gray-700 dark:text-gray-300"><%= sanitize @question.body %></div>
</div>

<div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-8">
  <div class="flex items-center mr-4">
    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
    <% if @question.user %>
      <%= @question.user.email %>
    <% else %>
      Unknown
    <% end %>
  </div>
  <div class="flex items-center">
    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
    <%= time_ago_in_words(@question.created_at) %> ago
  </div>
</div>

<h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Answers</h2>
<div id="answers" class="space-y-6 mb-8">
  <% if @question.answers.any? %>
    <% @question.answers.each do |answer| %>
      <div class="answer p-5 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="whitespace-pre-wrap text-gray-700 dark:text-gray-300 mb-4"><%= sanitize answer.body %></div>
        
        <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
          <div class="flex items-center mr-4">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
            <% if answer.user %>
              <%= answer.user.email %>
            <% else %>
              Unknown
            <% end %>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
            <% if answer.created_at.present? %>
              <%= time_ago_in_words(answer.created_at) %> ago
            <% else %>
              Unknown time
            <% end %>
          </div>
        </div>
        
        <% if user_signed_in? && answer.user == current_user && answer.persisted? %>
          <div class="mt-2">
            <%= button_to answer_path(answer), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-1.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800' do %>
              <div class="flex items-center">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                Delete Answer
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="p-4 mb-4 text-sm text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <p>There are no answers to this question yet.</p>
    </div>
  <% end %>
</div>

<div class="mt-8 mb-6">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Add Answer</h3>
  <div id="new-answer">
    <%= form_with(model: [@question, Answer.new], url: question_answers_path(@question), method: :post, data: { turbo: false }, local: true, class: "space-y-4") do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      
      <% if @answer && @answer.errors.any? %>
        <div id="error_explanation" class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400">
          <h2 class="text-base font-semibold"><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>
          <ul class="mt-1.5 list-disc list-inside">
            <% @answer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :body, 'Your Answer', class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.text_area :body, rows: 5, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Write your answer here..." %>
      </div>

      <div>
        <%= f.submit 'Post Answer', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to questions_path, class: "inline-flex items-center text-blue-600 hover:underline dark:text-blue-500" do %>
  <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
  Back to Questions
<% end %>
