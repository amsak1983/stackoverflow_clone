<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Edit Question</h1>

  <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-card">
    <%= render "form", question: @question %>
  </div>

  <div class="mt-6">
    <%= link_to question_path(@question), class: "inline-flex items-center text-blue-600 hover:underline dark:text-blue-500 focus-ring transition-all" do %>
      <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
      Back to Question
    <% end %>
  </div>
</div>
